@model ProductConfigurationEditModel

<h1>Configure your T-Shirt!</h1>
<form method="POST">
    <table>
    @for(int i = 0; i < Model.Fields.Count; i++)
    {
        <tr>
            <th>@Model.Fields[i].Name</th>
            <td><partial name="@Model.Fields[i].EditorName" for="Fields[i]" /></td>
        </tr>
    }
    </table>

    <button class="btn btn-primary">Save configuration</button>
</form>